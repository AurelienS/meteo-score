# MétéoScore Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# =============================================================================
# DATABASE (Required)
# =============================================================================
POSTGRES_USER=meteo_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=meteo_score

# =============================================================================
# ADMIN DASHBOARD (Required)
# =============================================================================
# Used for /admin page - Basic Auth credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD_HERE

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Set to "production" on VPS
ENVIRONMENT=production
LOG_LEVEL=INFO

# Frontend URL for CORS (your domain)
FRONTEND_URL=https://meteo-score.codeas.me

# =============================================================================
# SCHEDULER (Optional - defaults shown)
# =============================================================================
# Hours (UTC) when forecast collection runs
# SCHEDULER_FORECAST_HOURS=0,6,12,18

# Hours (UTC) when observation collection runs  
# SCHEDULER_OBSERVATION_HOURS=8,10,12,14,16,18

# Disable scheduler if needed
# SCHEDULER_ENABLED=true

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================
# Météo-France API token for AROME data
# Get one at: https://portail-api.meteofrance.fr/
# METEOFRANCE_API_TOKEN=your_token_here

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
# API rate limit per IP per minute
# RATE_LIMIT_PER_MINUTE=100
